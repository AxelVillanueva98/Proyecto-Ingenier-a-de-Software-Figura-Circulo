@* code .\src\WebUI\Pages\Index.cshtml *@
@page

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@functions
{
    double perimetro;
    double area;
    double volumen;

    public void OnPost(double radio, double altura)
    {
        perimetro = Application.Circulo.CalcularPerimetro(radio);
        area = Application.Circulo.CalcularArea(radio);
        volumen = Application.Cilindro.CalcularVolumen(area, altura);
    }
}

<h1>
    Calculadora de Área y Perímetro del Circulo
</h1>

<form method="Post">
    Dame el radio: <input type="number" name="radio">
    <br>
    Dame la altura: <input type="number" name="altura">
    <br>
    <button>Calcular</button>
</form>

<p>
    Área: @(area)cm2<br>Perímetro: @(perimetro)cm<br>Volumen: @(volumen)cm3
</p>